{
  "name": "@t4y3/libraries-boilerplate",
  "version": "0.0.5",
  "description": "Boilerplate with TypeScript, linter, formatter, and Semantic Versioning",
  "main": "lib/index.js",
  "scripts": {
    "hooks": "npx simple-git-hooks",
    "build": "rm -rf lib && rollup -c && npm run types",
    "watch": "rollup -c -w",
    "types": "tsc -d --emitDeclarationOnly",
    "fix": "prettier --write",
    "lint": "eslint src",
    "release": "semantic-release"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint src",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npx lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t4y3/libraries-boilerplate.git"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Yuki Teraoka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/t4y3/libraries-boilerplate/issues"
  },
  "homepage": "https://github.com/t4y3/libraries-boilerplate#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rollup": "^2.43.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.2",
    "simple-git-hooks": "^2.2.0",
    "typescript": "^4.2.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
